@page
@model LoginModel

<h2>Login</h2>

<form method="post">
    <div>
        <label>Usuário:</label>
        <input asp-for="Username" />
    </div>
    <div>
        <label>Senha:</label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Entrar</button>
</form>

@if (Model.ErrorMessage != null)
{
    <p style="color:red">@Model.ErrorMessage</p>
}
